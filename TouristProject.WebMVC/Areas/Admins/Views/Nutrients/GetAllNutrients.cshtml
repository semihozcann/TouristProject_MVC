@model TouristProject.WebMVC.Models.Nutrients.NutrientListViewModel

@{
    ViewData["Title"] = "GetAllNutrients";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div id="addButtonTable">
        <table>
            <tr>
                <td>Besin eklemek için ekle butonuna tıklayınız</td>
                <td>:</td>
                <td> <a asp-area="Admins" asp-controller="Nutrients" asp-action="Add" id="categoryAddButton">Besin Ekle</a></td>
            </tr>
        </table>
    </div>

    @if (Model != null)
    {
        <div>
            <table class="table" id="categoryListTable">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Besin Adı</td>
                        <td>Kategorisi</td>
                        <td>Kısa Açıklaması</td>
                        <td>Açıklaması</td>
                        <td>İçindekileri</td>
                        <td>Oluşturulma Tarihi</td>
                        <td>Güncellenme Tarihi</td>
                        <td>Güncelle</td>
                        <td>Sil</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nutrient in Model.Nutrients.Nutrients)
                    {
                        <tr>
                            <td>@nutrient.Id</td>
                            <td>@nutrient.Name</td>
                            <td>@nutrient.Category.Name</td>
                            <td>@nutrient.SmallDescription</td>
                            <td>@nutrient.Description</td>
                            <td>@nutrient.Ingredients</td>
                            <td>@nutrient.CreatedDate</td>
                            <td>@nutrient.ModifiedDate</td>
                            <td><a href="/Admins/Nutrients/Update/@nutrient.Id" id="categoryListTableButton">Güncelle</a></td>
                            <td><a href="/Admins/Nutrients/Delete/@nutrient.Id" id="categoryListTableButton">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
    else
    {
        <p>Hiç Kategori Bulunamadı</p>
    }
</div>

