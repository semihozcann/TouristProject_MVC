@model CategoryListViewModel

@{
    ViewData["Title"] = "GetAllCategories";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div id="addButtonTable">
        <table>
            <tr>
                <td>Kategori eklemek için ekle butonuna tıklayınız</td>
                <td>:</td>
                <td> <a asp-area="Admins" asp-controller="Categories" asp-action="Add" id="categoryAddButton">Kategori Ekle</a></td>
            </tr>
        </table>
    </div>

    @if (Model !=null)
    {
        <div>
            <table class="table" id="categoryListTable">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Kategori Adı</td>
                        <td>Oluşturulma Tarihi</td>
                        <td>Güncellenme Tarihi</td>
                        <td>Güncelle</td>
                        <td>Sil</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Category.Categories)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.CreatedDate</td>
                            <td>@category.ModifiedDate</td>
                            <td><a href="/Admins/Categories/Update/@category.Id" id="categoryListTableButton">Güncelle</a></td>
                            <td><a href="/Admins/Categories/Delete/@category.Id" id="categoryListTableButton">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
    else
    {
        <p>Hiç Kategori Bulunamadı</p>
    }
</div>
