@model TouristProject.WebMVC.Models.Nutrients.NutrientAddViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-controller="Nutrients" asp-action="Add" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" id="Name" type="text" class="form-control" placeholder="Besin Adı" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x=>x.CategoryId, (List<SelectListItem>)Model.CategoriesForDr, new { @class = "form-control"})
        </div>
        <div class="form-group">
            <label asp-for="SmallDescription" class="control-label"></label>
            <input asp-for="SmallDescription" id="SmallDescription" type="text" class="form-control" placeholder="Besin Kısa Açıklaması" />
            <span asp-validation-for="SmallDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" id="Description" type="text" class="form-control" placeholder="Besin Açıklaması" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ingredients" class="control-label"></label>
            <input asp-for="Ingredients" id="Ingredients" type="text" class="form-control" placeholder="Besin içeriği" />
            <span asp-validation-for="Ingredients" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" type="file" name="ImageUrl" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn badge-primary" type="submit" value="Add" id="addCategory">Kaydet</button>
            @ViewBag.CategoryResultMessage

        </div>
    </form>
</div>